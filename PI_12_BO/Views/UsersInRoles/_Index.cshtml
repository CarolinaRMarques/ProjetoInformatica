@model IEnumerable<PI_12_BO.Models.AspNetRoles>

@{
    ViewBag.Title = "Papéis do utilizador";
}
<hr />
<h3>@ViewBag.Title [@Model.Count()]</h3>
<hr />
<p>
    <a class="btn btn-default" title="Adicionar Papel" data-toggle="modal" data-target="#myModal">Create New</a>
</p>
@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <div class="form-control-static img-thumbnail">
                <i class="fa fa-id-badge"></i> @item.Name <a href="@Url.Action("RemoveRoleFromUser", "UsersInRoles", new { roleId = item.Id, userId = @ViewBag.UserId })" title="Remover o Papel ao Utilizador"><span aria-hidden="true">&times;</span></a>
            </div>
    }
}
else
{
    <div class="bs-callout bs-callout-info">
        <h4 class="text-warning"><i class="fa fa-warning" aria-hidden="true"></i> Informação</h4>
        <p>Utilizador sem Papéis associados.</p>
    </div>
}
@Html.Action("_Create", "UsersInRoles", new { userId = @ViewBag.userId })
