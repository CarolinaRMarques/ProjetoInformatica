@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            @using (Html.BeginForm("Index", "Search", FormMethod.Get, new { @class = "navbar-form navbar-left" }))
            {
                    <div class="input-group">
                        <input type="text" name="q" class="form-control" placeholder="Texto de pesquisa..." pattern=".{3,}" required title="Texto Mínimo: 3 letras" />
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit">Search</button>
                        </div>
                    </div>
            }
            </li>
        <li><a href="@Url.Action("Index", "Manage")" title="Manage"><i class="fa fa-user-o"></i> @User.Identity.GetUserName()</a></li>
        <li>
            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-form" }))
            {
                @Html.AntiForgeryToken()
                <a href="javascript:document.getElementById('logoutForm').submit()" title="Log Out" class="btn">Logout</a>
            }
        </li>
    </ul>
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li>
        @using (Html.BeginForm("Index", "Search", FormMethod.Get, new { @class = "navbar-form navbar-left" }))
        {
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Texto de pesquisa..." pattern=".{3,}" required title="Texto Mínimo: 3 letras" />
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">Search</button>
                </div>
            </div>
        }
    </li>
    <li><a href="@Url.Action("Register", "Account", new { id = "registerLink" })" title="Register"><i class="fa fa-user-circle"></i></a></li>
    <li><a href="@Url.Action("Login", "Account", new { id = "loginLink" })" title="Log in"><i class="fa fa-sign-in"></i></a></li>
</ul>
}
