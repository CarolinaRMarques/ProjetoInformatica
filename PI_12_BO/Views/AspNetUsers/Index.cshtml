@model IEnumerable<PI_12_BO.Models.AspNetUsers>

@{
    ViewBag.Title = "Utilizadores - Lista";
}
<div class="page-header">
    <h2>@ViewBag.Title</h2>
</div>
@*<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default" })
</p>*@
<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.UserName)</th>
            <th class="text-center">@Html.DisplayNameFor(model => model.BirthDate)</th>
            <th class="text-center">@Html.DisplayNameFor(model => model.Gender)</th>
            <th>@Html.DisplayNameFor(model => model.FullName)</th>
            <th></th>
        </tr>
    </thead>
@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.UserName)</td>
        <td class="text-center">@Html.DisplayFor(modelItem => item.BirthDate)</td>
        <td class="text-center">@Html.DisplayFor(modelItem => item.Gender)</td>
        <td>@Html.DisplayFor(modelItem => item.FullName)</td>
        <td class="text-right">
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @class = "btn btn-default btn-xs" })
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-default btn-xs" })
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-default btn-xs" })
        </td>
    </tr>
}

</table>
